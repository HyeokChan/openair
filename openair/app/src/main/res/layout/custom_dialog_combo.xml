<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"

    android:layout_height="wrap_content"

    android:orientation="vertical"

    android:padding="5dp">

    <TextView
        android:id="@+id/dialogTitleCombo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ygotjalnanfont"
        android:gravity="center"
        android:text="인원모집 글쓰기"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/ygotjalnanfont"
        android:text=" 총 모집 인원 수" />

    <EditText
        android:id="@+id/totalCombo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:ems="10"
        android:fontFamily="@font/ygotjalnanfont"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/ygotjalnanfont"
        android:text=" 모집 인원 수" />

    <EditText
        android:id="@+id/recruitCombo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:ems="10"
        android:fontFamily="@font/ygotjalnanfont"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/ygotjalnanfont"
        android:text=" 시간대 설정" />

    <Spinner
        android:id="@+id/spiner1Combo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:entries="@array/time" />

    <Spinner
        android:id="@+id/spiner2Combo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:entries="@array/time" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/ygotjalnanfont"
        android:text=" 모집 장소" />

    <EditText
        android:id="@+id/areaCombo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:ems="10"
        android:fontFamily="@font/ygotjalnanfont"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancleButtonCombo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/bt_corner"
            android:fontFamily="@font/ygotjalnanfont"
            android:text="취소"
            android:textColor="#000"
            />

        <Button
            android:id="@+id/okButtonCombo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/bt_corner"
            android:fontFamily="@font/ygotjalnanfont"
            android:text="모집하기"
            android:textColor="#000" />
    </LinearLayout>

</LinearLayout>
